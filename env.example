# ==============================================
# MYPatients.ie - Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Application Settings
NODE_ENV=development
APP_PORT=3000
APP_URL=http://localhost:3000

# Security Keys (Generate new ones for production!)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-key-here-change-this
JWT_SECRET=your-jwt-secret-key-here-change-this
ENCRYPTION_KEY=your-encryption-key-here-change-this

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mypatients_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_SSL=true

# Email Service (for notifications, password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@mypatients.ie

# AWS S3 (for secure file storage - medical records, images)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=mypatients-medical-records

# HIPAA Compliance - Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=/var/log/mypatients/audit.log

# Two-Factor Authentication
TOTP_ISSUER=MYPatients.ie
TOTP_WINDOW=1

# Rate Limiting (prevent brute force attacks)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Redis (for session storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# API Keys for Third-Party Services
STRIPE_SECRET_KEY=sk_test_your_stripe_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Health Insurance API Integration
INSURANCE_API_KEY=your-insurance-api-key
INSURANCE_API_URL=https://api.insurance-provider.com

# Backup & Recovery
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_SCHEDULE=0 2 * * *

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking
